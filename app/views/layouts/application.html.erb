<!DOCTYPE html>
<html>
  <head>
    <title>Freshreader</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag %>
  </head>

  <body>
    <div id="main-container">
      <div class="nav">
        <div style="padding: 0 1em">
          <div class="flex">
            <div class="flex-1">
              <a class="internal-link no-border-bottom" href="/">
                <img id="nav-logo" src="<%= image_url("logo.svg") %>"/>
                <span id="logo-text">Freshreader</span>
              </a>
            </div>
            <p>
              <% if logged_in? %>
                <%= link_to "Reading list", '/articles', class: "internal-link nav-link #{controller?("articles") ? "active" : ''}" %>
                <%= link_to "Account", '/account', class: "internal-link nav-link #{controller?("users") ? "active" : ''}" %>
                <%= link_to "Log out", '/logout', method: :post, class: "internal-link nav-link" %>
              <% else %>
                <%= link_to t(:log_in), '/login', method: :get, class: "internal-link nav-link" %>
                <%= link_to t(:create_an_account), '/signup', method: :post, class: "glow-primary no-margin btn btn-small btn-success internal-link" %>
              <% end %>
            </p>
          </div>
        </div>
      </div>

      <div class="wrapper" id="flashes-wrapper">
        <% flash.each do |name, msg| %>
          <div class="flash flash_<%= name %>">
            <%= msg.html_safe %>
          </div>
        <% end %>
      </div>

      <div>
        <%= yield %>
      </div>

      <footer>
        <div class="wrapper">
          <p>
          </p>
          <p>
          <%= t(:built_by) %><a target="_blank" href="https://twitter.com/vaillancourtmax">Maxime Vaillancourt</a> <%= t(:where) %>
          </p>
          <div>
            <%= link_to t(:privacy), '/privacy', class: "internal-link" %>
            &middot;
            <%= link_to t(:transparency), '/transparency', class: "internal-link" %>
            &middot;
            <%= link_to t(:open_source), 'https://github.com/freshreader' %>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html>
